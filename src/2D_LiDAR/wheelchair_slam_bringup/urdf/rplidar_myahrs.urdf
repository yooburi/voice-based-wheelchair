<!-- Minimal URDF for RPLIDAR A2M8 + myAHRS+ on a 2D robot -->
<robot name="wheelchair_bot">
  <!-- Base link (robot body reference) -->
  <link name="base_link"/>

  <!-- LiDAR frame -->
  <link name="laser_frame"/>

  <!-- IMU frame -->
  <link name="imu_link"/>

  <!-- x(전방)0.17 / y(좌측) / z(위) 0.2 meter scale-->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_frame"/>
    <origin xyz="0.17 0.0 0.20" rpy="0 0 0"/>
  </joint>

  <!-- IMU는 base_link 중심에 장착 -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
  </joint>
</robot>

